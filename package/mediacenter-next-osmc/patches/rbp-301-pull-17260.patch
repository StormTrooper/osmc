From 1b43138fc720d368df1c428c0be185987c64be86 Mon Sep 17 00:00:00 2001
From: Lukas Rusak <lorusak@gmail.com>
Date: Fri, 24 Jan 2020 17:18:19 -0800
Subject: [PATCH] [depends] allow compiling on an aarch64 host

---
 tools/depends/configure.ac    | 3 +++
 tools/depends/m4/xbmc_arch.m4 | 2 +-
 2 files changed, 4 insertions(+), 1 deletion(-)

diff --git a/tools/depends/configure.ac b/tools/depends/configure.ac
index eb7772b0bed9..2c74c3b0866b 100644
--- a/tools/depends/configure.ac
+++ b/tools/depends/configure.ac
@@ -152,6 +152,9 @@ tool_dir=$build_cpu-$build_os-native
 cross_compiling="yes"
 
 case $build in
+  aarch64*-*-linux-gnu*|aarch64*-*-linux-uclibc*)
+    build_os="linux"
+  ;;
   arm*-*-linux-gnu*|arm*-*-linux-uclibc*)
     build_os="linux"
   ;;
diff --git a/tools/depends/m4/xbmc_arch.m4 b/tools/depends/m4/xbmc_arch.m4
index 36aee1093e1e..03cd7acd317c 100644
--- a/tools/depends/m4/xbmc_arch.m4
+++ b/tools/depends/m4/xbmc_arch.m4
@@ -23,7 +23,7 @@ case $build in
   powerpc64-*-linux-gnu*|powerpc64-*-linux-uclibc*)
      AC_SUBST(NATIVE_ARCH_DEFINES, "-DTARGET_POSIX -DTARGET_LINUX -D_POWERPC64")
      ;;
-  arm*-*-linux-gnu*|arm*-*-linux-uclibc*)
+  arm*-*-linux-gnu*|arm*-*-linux-uclibc*|aarch64*-*-linux-gnu*|aarch64*-*-linux-uclibc*)
      AC_SUBST(NATIVE_ARCH_DEFINES, "-DTARGET_POSIX -DTARGET_LINUX")
      ;;
   *)
