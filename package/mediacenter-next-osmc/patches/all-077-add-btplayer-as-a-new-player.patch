+BTPlayer::BTPlayer(IPlayerCallback& callback) :
+  IPlayer              (callback),
+  CThread              ("BTPlayer"),
+  m_signalSpeedChange  (false),
+  m_playbackSpeed      (1    ),
+  m_isPlaying          (false),
+  m_isPaused           (false),
+  m_isFinished         (false),
