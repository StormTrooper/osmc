From 6b8ab01232eada860e1ca4c742ba0eb917ccd150 Mon Sep 17 00:00:00 2001
From: "Ch1llb0/skin.osmc" <36623079+Ch1llb0@users.noreply.github.com>
Date: Wed, 19 Dec 2018 14:31:36 +0100
Subject: [PATCH] Remove hide preview art of TV show episodes option

SkinSettings.xml:
- remove deprecated toggle (Kodi has this now natively)

Variables.xml:
- remove deprecated variable condition for TV show episode images

strings.po:
- remove deprecated localize
---
 16x9/SkinSettings.xml       | 12 +-----------
 16x9/Variables.xml          |  1 -
 language/English/strings.po |  5 -----
 3 files changed, 1 insertion(+), 17 deletions(-)

diff --git a/16x9/SkinSettings.xml b/16x9/SkinSettings.xml
index 6b26039..5002b91 100755
--- a/16x9/SkinSettings.xml
+++ b/16x9/SkinSettings.xml
@@ -661,18 +661,8 @@
 					<focusedcolor>$VAR[TextColor1]</focusedcolor>
 					<textcolor>$VAR[TextColor2]</textcolor>
 				</control>
-				<!-- Hide thumbnails of unwatched episodes -->
-				<control type="radiobutton" id="305">
-					<width>1220</width>
-					<height>66</height>
-					<textwidth>1120</textwidth>
-					<font>Font33</font>
-					<label>31103</label>
-					<onclick>Skin.ToggleSetting(HideEpisodeThumbnail)</onclick>
-					<selected>Skin.HasSetting(HideEpisodeThumbnail)</selected>
-				</control>
 				<!-- Kiosk mode -->
-				<control type="radiobutton" id="306">
+				<control type="radiobutton" id="305">
 					<width>1220</width>
 					<height>66</height>
 					<textwidth>1120</textwidth>
diff --git a/16x9/Variables.xml b/16x9/Variables.xml
index 56af873..f3e6be0 100755
--- a/16x9/Variables.xml
+++ b/16x9/Variables.xml
@@ -1251,7 +1251,6 @@
 	<!-- Media images -->
 	<variable name="mediaImages">
 		<value condition="Container.Content(Seasons) + !String.IsEmpty(ListItem.Art(season.poster))">$INFO[ListItem.Art(season.poster)]</value>
-		<value condition="Container.Content(Episodes) + [Skin.HasSetting(HideEpisodeThumbnail) + !ListItem.IsParentFolder + String.IsEmpty(ListItem.PlayCount)]"></value>
 		<value condition="Container.Content(Episodes)">$INFO[ListItem.Icon]</value> 
 		<value condition="!String.IsEmpty(ListItem.Art(poster))">$INFO[ListItem.Art(poster)]</value>
 		<value>$INFO[ListItem.Icon]</value>
diff --git a/language/English/strings.po b/language/English/strings.po
index cc613a3..609dbd4 100644
--- a/language/English/strings.po
+++ b/language/English/strings.po
@@ -485,11 +485,6 @@ msgctxt "#31102"
 msgid "Display time of video player OSD during pause (default: Always)"
 msgstr ""
 
-#: /16x9/SkinSettings.xml
-msgctxt "#31103"
-msgid "Hide preview art of unwatched TV show episodes"
-msgstr ""
-
 #: /16x9/SkinSettings.xml
 msgctxt "#31104"
 msgid "Dim factor of unfocused art (default: 100%)"
